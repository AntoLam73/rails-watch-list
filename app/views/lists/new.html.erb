<div class="m-3">
  <%= link_to "Back to my lists", lists_path, class: "btn btn-secondary btn-sm mt-3" %>
</div>

<div class="container mt-4 mb-4 bg-light p-4 border rounded">

  <div class="mb-3 text-center">
    <h1>Add a new List</h1>
  </div>

  <div class="row">
    <%= simple_form_for @list do |f| %>
      <%= f.input :name %>
      <%= f.submit class: "btn btn-primary mt-4" %>
    <% end %>
  </div>

</div>
