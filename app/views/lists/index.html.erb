<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDE5fHx8ZW58MHx8fHx8);">
  <div class="container text-center text-white">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>


<div class="container bg-light mt-3 pb-4 mb-4 px-4 rounded border shadow-sm">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="mt-2">My Lists:</h3>
    <%= link_to "Add a new List", new_list_path, :class=>"btn btn-primary m-3" %>
  </div>

  <div class="d-grid gap-3" style="grid-template-columns: repeat(auto-fill, minmax(175px, 1fr)); grid-auto-rows: auto;">
    <% @lists.each do |list| %>
      <div class="cards">
        <a href="lists/<%= list.id %>" class="list-group-item list-group-item-action" aria-current="true">
          <div class="card-category text-center p-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.istockphoto.com/id/1007557230/photo/movie-projector-on-dark-background.jpg?s=612x612&w=0&k=20&c=bPgXKrqKU4nrWgJ_RXgLe9KN4SIitgTIcRobxxBiXTo=);">
            <strong class="text-light"><%= list.name %></strong>
          </div>
        </a>
      </div>
    <% end %>
  </div>

</div>
